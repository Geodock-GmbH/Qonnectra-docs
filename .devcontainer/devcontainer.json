{
  "name": "Qonnectra Docs",
  
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  
  // Features to add to the dev container
  "features": {},
  
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [5173],
  
  // Use 'postCreateCommand' to run commands after the container is created.
  // Use CI=true to avoid corepack confirmation for downloading pnpm
  "postCreateCommand": "corepack enable && CI=true pnpm install",
  
  // Use 'postStartCommand' to run commands after the container starts.
  // This runs every time you start the codespace
  "postStartCommand": "echo -e \"\\033[1m\\033[36m╔════════════════════════════════════════════════╗\\033[0m\\n\\033[1m\\033[36m║\\033[0m \\033[1m\\033[32mNext Step:\\033[0m Open a new terminal and run \\033[1m\\033[33m'pnpm dev'\\033[0m \\033[1m\\033[36m║\\033[0m\\n\\033[1m\\033[36m╚════════════════════════════════════════════════╝\\033[0m\"",
  
  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  
  // Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
  "remoteUser": "node"
}

